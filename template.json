{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "wild-west-spanwer",
        "annotations": {
            "openshift.io/display-name": "Wild West Spawnwer"
        }
    },
    "parameters": [
        {
            "name": "SPAWNER_NAME",
            "value": "wild-west",
            "required": true
        },
        {
            "name": "IDLE_TIMEOUT",
            "value": "300"
        }
    ],
    "objects": [
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-view",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            }
        },
        {
            "kind": "RoleBinding",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-view",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${SPAWNER_NAME}-view"
                }
            ],
            "roleRef": {
                "name": "edit"
            }
        },
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-edit",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            }
        },
        {
            "kind": "RoleBinding",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-edit",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${SPAWNER_NAME}-edit"
                }
            ],
            "roleRef": {
                "name": "edit"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-spawner-s2i",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-spawner-s2i",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/jupyter-on-openshift/jupyterhub-quickstart.git"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "python:3.5",
                            "namespace": "openshift"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${SPAWNER_NAME}-spawner-s2i:latest"
                    }
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-spawner-img",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            }
        },

        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-spawner-img",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/GrahamDumpleton/Wild-West-Spawner.git"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${SPAWNER_NAME}-spawner-s2i:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${SPAWNER_NAME}-spawner-img:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "spawner"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${SPAWNER_NAME}-spawner-img:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${SPAWNER_NAME}",
                    "deploymentconfig": "${SPAWNER_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${SPAWNER_NAME}",
                            "deploymentconfig": "${SPAWNER_NAME}"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${SPAWNER_NAME}-edit",
                        "containers": [
                            {
                                "name": "spawner",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "SPAWNER_NAME",
                                        "value": "${SPAWNER_NAME}"
                                    },
                                    {
                                        "name": "FRONTEND_IMAGE",
                                        "value": "${SPAWNER_NAME}-frontend:latest"
                                    },
                                    {
                                        "name": "IDLE_TIMEOUT",
                                        "value": "${IDLE_TIMEOUT}"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    },
                    {
                        "name": "8081-tcp",
                        "protocol": "TCP",
                        "port": 8081,
                        "targetPort": 8081
                    }
                ],
                "selector": {
                    "app": "${SPAWNER_NAME}",
                    "deploymentconfig": "${SPAWNER_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${SPAWNER_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-backend",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-backend",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/openshift-evangelists/Wild-West-Backend"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "java:8",
                            "namespace": "openshift"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${SPAWNER_NAME}-backend:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-backend",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "backend"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${SPAWNER_NAME}-backend:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${SPAWNER_NAME}",
                    "deploymentconfig": "${SPAWNER_NAME}-backend"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${SPAWNER_NAME}",
                            "deploymentconfig": "${SPAWNER_NAME}-backend"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${SPAWNER_NAME}-view",
                        "containers": [
                            {
                                "name": "backend",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-backend",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "${SPAWNER_NAME}",
                    "deploymentconfig": "${SPAWNER_NAME}-backend"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-backend",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${SPAWNER_NAME}-backend",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-frontend",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${SPAWNER_NAME}-frontend",
                "labels": {
                    "app": "${SPAWNER_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/openshift-evangelists/Wild-West-Frontend"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "nodejs:10",
                            "namespace": "openshift"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${SPAWNER_NAME}-frontend:latest"
                    }
                }
            }
        }
    ]
}
